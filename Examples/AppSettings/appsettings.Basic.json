{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // ===== SERILOG - BASIC CONFIGURATION =====
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  // ===== AES ENCRYPTION - BASIC =====
  "Aes": {
    "SecretKey": "MySecretKey123456789012345678901" // 32 characters for AES-256
  },

  // ===== JWT AUTHENTICATION - BASIC =====
  "TokenSettings": {
    "RsaPrivateKey": "-----BEGIN RSA PRIVATE KEY-----\nMIIEowIBAAKCAQEA...(your private key)...\n-----END RSA PRIVATE KEY-----",
    "RsaPublicKey": "-----BEGIN PUBLIC KEY-----\nMIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8A...(your public key)...\n-----END PUBLIC KEY-----",
    "AccessExpireTimeS": "3600",
    "RefreshExpireTimeS": "86400",
    "Issuer": "MyApp",
    "Audience": "MyAppUsers"
  },

  // ===== PERFORMANCE - BASIC (All defaults) =====
  "PerformanceOptimization": {
    "EnableResponseCompression": true,
    "EnableResponseCaching": true,
    "EnableOutputCache": true
  },

  // ===== RATE LIMITING - BASIC =====
  "RateLimiting": {
    "Enabled": true,
    "PermitLimit": 100,
    "WindowSeconds": 60,
    "RetryAfterSeconds": 60,
    "PolicyName": "BasicRateLimit"
  },

  // ===== DATABASE CONNECTION =====
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=mydb;Username=postgres;Password=yourpassword"
  }
}
