  "ConnectionStrings": {
    // ===== PostgreSQL - Basic =====
    "PostgreSQL_Basic": "Host=localhost;Port=5432;Database=mydb;Username=postgres;Password=yourpassword",
    
    // ===== PostgreSQL - Production (v?i connection pooling) =====
    "PostgreSQL_Production": "Host=db.server.com;Port=5432;Database=mydb;Username=dbuser;Password=yourpassword;Pooling=true;MinPoolSize=5;MaxPoolSize=100;ConnectionIdleLifetime=300;ConnectionPruningInterval=10;Timeout=30;CommandTimeout=30;",
    
    // ===== PostgreSQL - SSL =====
    "PostgreSQL_SSL": "Host=db.server.com;Port=5432;Database=mydb;Username=dbuser;Password=yourpassword;SSL Mode=Require;Trust Server Certificate=true",
    
    // ===== SQL Server - Basic =====
    "SqlServer_Basic": "Server=localhost;Database=mydb;User Id=sa;Password=yourpassword;TrustServerCertificate=True",
    
    // ===== SQL Server - Windows Authentication =====
    "SqlServer_Windows": "Server=localhost;Database=mydb;Integrated Security=True;TrustServerCertificate=True",
    
    // ===== SQL Server - Production =====
    "SqlServer_Production": "Server=db.server.com,1433;Database=mydb;User Id=dbuser;Password=yourpassword;Encrypt=True;TrustServerCertificate=False;MultipleActiveResultSets=True;Max Pool Size=100;Min Pool Size=5;Connection Timeout=30",
    
    // ===== MySQL - Basic =====
    "MySQL_Basic": "Server=localhost;Port=3306;Database=mydb;User=root;Password=yourpassword",
    
    // ===== MySQL - Production =====
    "MySQL_Production": "Server=db.server.com;Port=3306;Database=mydb;User=dbuser;Password=yourpassword;Pooling=true;MinimumPoolSize=5;MaximumPoolSize=100;ConnectionLifeTime=300;",
    
    // ===== MongoDB - Basic =====
    "MongoDB_Basic": "mongodb://localhost:27017/mydb",
    
    // ===== MongoDB - Production (with auth) =====
    "MongoDB_Production": "mongodb://username:password@cluster.mongodb.net/mydb?retryWrites=true&w=majority",
    
    // ===== Redis - Basic =====
    "Redis_Basic": "localhost:6379",
    
    // ===== Redis - Production (with password) =====
    "Redis_Production": "redis-server.com:6379,password=yourpassword,ssl=true,abortConnect=false"
  }

