{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  // ===== SERILOG - MEDIUM CONFIGURATION =====
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] [CorrelationId:{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] [CorrelationId:{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": "your-seq-api-key"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName", "WithProcessId" ],
    "Properties": {
      "Application": "MyApp",
      "Environment": "Development"
    }
  },

  // ===== AES ENCRYPTION - MEDIUM =====
  "Aes": {
    "SecretKey": "ThisIsAVerySecureSecretKey12345" // 32 characters for AES-256
  },

  // ===== JWT AUTHENTICATION - MEDIUM =====
  "TokenSettings": {
    "RsaPrivateKey": "-----BEGIN RSA PRIVATE KEY-----\nMIIEowIBAAKCAQEA...(your private key)...\n-----END RSA PRIVATE KEY-----",
    "RsaPublicKey": "-----BEGIN PUBLIC KEY-----\nMIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8A...(your public key)...\n-----END PUBLIC KEY-----",
    "AccessExpireTimeS": "1800",
    "RefreshExpireTimeS": "604800",
    "Issuer": "https://api.myapp.com",
    "Audience": "https://myapp.com"
  },

  // ===== PERFORMANCE - MEDIUM (Optimized settings) =====
  "PerformanceOptimization": {
    "EnableResponseCompression": true,
    "CompressionEnableForHttps": true,
    "BrotliCompressionLevel": "Optimal",
    "GzipCompressionLevel": "Optimal",
    "EnableResponseCaching": true,
    "ResponseCacheMaxBodySize": 2097152,
    "ResponseCacheCaseSensitive": false,
    "EnableOutputCache": true,
    "OutputCacheExpirationSeconds": 30
  },

  // ===== KESTREL LIMITS - MEDIUM =====
  "KestrelLimits": {
    "MaxConcurrentConnections": 1000,
    "MaxConcurrentUpgradedConnections": 1000,
    "MaxRequestBodySize": 52428800,
    "KeepAliveTimeoutSeconds": 130,
    "RequestHeadersTimeoutSeconds": 30,
    "MaxRequestHeadersTotalSize": 65536,
    "MaxRequestHeaderCount": 100,
    "MaxRequestLineSize": 16384,
    "Http2MaxStreamsPerConnection": 100,
    "Http2InitialConnectionWindowSize": 131072,
    "Http2InitialStreamWindowSize": 98304
  },

  // ===== RATE LIMITING - MEDIUM =====
  "RateLimiting": {
    "Enabled": true,
    "PermitLimit": 200,
    "WindowSeconds": 60,
    "RetryAfterSeconds": 30,
    "QueueLimit": 10,
    "Type": "Sliding",
    "PolicyName": "SlidingRateLimit",
    "RateLimitExceededMessage": "Too many requests. Please try again later.",
    "IncludeRateLimitHeaders": true,
    "WhitelistedPaths": [
      "/health",
      "/metrics",
      "/api/status",
      "/swagger"
    ]
  },

  // ===== CORS - MEDIUM =====
  "Cors": {
    "AllowedOrigins": [
      "https://myapp.com",
      "https://admin.myapp.com",
      "http://localhost:3000"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  },

  // ===== DATABASE CONNECTION - MEDIUM =====
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=mydb;Username=postgres;Password=yourpassword;Pooling=true;MinPoolSize=5;MaxPoolSize=100;ConnectionIdleLifetime=300;ConnectionPruningInterval=10"
  },

  // ===== CACHING - MEDIUM =====
  "Caching": {
    "MemoryCache": {
      "SizeLimit": 1024,
      "CompactionPercentage": 0.25,
      "ExpirationScanFrequencySeconds": 60
    },
    "DistributedCache": {
      "Provider": "Redis",
      "Configuration": "localhost:6379",
      "InstanceName": "MyApp:"
    }
  },

  // ===== AUTHORIZATION - MEDIUM =====
  "Authorization": {
    "EnableDynamicPermission": true,
    "CachePermissionMinutes": 5,
    "DefaultPolicy": "RequireAuthenticatedUser"
  }
}
