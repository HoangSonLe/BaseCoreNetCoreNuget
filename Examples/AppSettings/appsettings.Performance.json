{
  // ===== PERFORMANCE OPTIMIZATION ONLY =====
  // C?u hình t?i ?u hi?u su?t cho ?ng d?ng
  
  "PerformanceOptimization": {
    // ===== Response Compression =====
    "EnableResponseCompression": true,
    "CompressionEnableForHttps": true,
    "BrotliCompressionLevel": "Fastest", // Options: Fastest, Optimal, NoCompression, SmallestSize
    "GzipCompressionLevel": "Fastest",   // Options: Fastest, Optimal, NoCompression, SmallestSize

    // ===== Response Caching =====
    "EnableResponseCaching": true,
    "ResponseCacheMaxBodySize": 1048576,      // 1 MB (bytes)
    "ResponseCacheCaseSensitive": false,

    // ===== Output Cache (.NET 7+) =====
    "EnableOutputCache": true,
    "OutputCacheExpirationSeconds": 10
  },

  // ===== KESTREL LIMITS (Optional but recommended for production) =====
  "KestrelLimits": {
    "MaxConcurrentConnections": 100,
    "MaxConcurrentUpgradedConnections": 100,
    "MaxRequestBodySize": 30000000,           // 30 MB
    "KeepAliveTimeoutSeconds": 130,
    "RequestHeadersTimeoutSeconds": 30,
    "MaxRequestHeadersTotalSize": 32768,      // 32 KB
    "MaxRequestHeaderCount": 100,
    "MaxRequestLineSize": 8192,               // 8 KB
    "Http2MaxStreamsPerConnection": 100,
    "Http2InitialConnectionWindowSize": 131072,   // 128 KB
    "Http2InitialStreamWindowSize": 98304         // 96 KB
  }
}
